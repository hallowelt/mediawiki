{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"require": "readonly",
		"module": "readonly"
	},
	"rules": {
		"es-x/no-promise-prototype-finally": "off",
		"max-len": "off",
		"no-jquery/no-done-fail": "off",
		"no-jquery/no-global-selector": "off",
		"jsdoc/no-undefined-types": [ 1, {
			"definedTypes": [
				"Hooks"
			]
		} ],
		"unicorn/prefer-includes": "off"
	}
}
