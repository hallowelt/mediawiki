{
	"minimum-stability": "dev",
	"extra": {
		"merge-plugin": {
			"include": [
				"_bluespice/build/*/composer.json",
				"extensions/OATHAuth/composer.json"
			],
			"merge-extra": true,
			"merge-scripts": true
		}
	},
	"scripts": {
		"pre-update-cmd": [
			"sh _bluespice/pre-update-cmd.sh"
		],
		"pre-autoload-dump": [
			"sh _bluespice/pre-autoload-dump.sh"
		]
	},
	"archive": {
		"exclude": ["!/vendor", "!/composer.local.json", "!/composer.json", "!/composer.lock"]
	}
}
